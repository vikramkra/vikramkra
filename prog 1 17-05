#include<bits/stdc++.h>
using namespace std; 

 // } Driver Code Ends
class Solution
{
public:
intsetKthBit(int N, int K)
    {
        // Write Your Code here
         return N |(1<<K) ;
    }

};




// { Driver Code Starts.
int main()
{
int t;
cin>> t;
    while (t--)
    {
int N, K;
cin>> N >> K;

        Solution ob;
intans = ob.setKthBit(N,K);
cout<<ans<<endl;
    }
    return 0;
}
